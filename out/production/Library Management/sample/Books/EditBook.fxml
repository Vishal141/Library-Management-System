<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="258.0" prefWidth="354.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Books.EditBook">

    <children>
        <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <JFXTextField fx:id="bId" labelFloat="true" layoutX="30.0" layoutY="30.0" promptText="Book id">
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
                <JFXTextField fx:id="bTitle" labelFloat="true" promptText="Book Title">
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
                <JFXTextField fx:id="bAuthor" labelFloat="true" layoutX="10.0" layoutY="76.0" promptText="Book Author">
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
                <JFXTextField fx:id="bPublisher" labelFloat="true" layoutX="10.0" layoutY="101.0" promptText="Publisher">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
                <HBox prefHeight="47.0" prefWidth="366.0">
                    <children>
                        <JFXButton fx:id="saveBtn" onAction="#save" prefHeight="38.0" prefWidth="143.0" stylesheets="@../cssFiles/addbook.css" text="Save">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="cancelBtn" layoutX="30.0" layoutY="20.0" onAction="#cancel" prefHeight="38.0" prefWidth="143.0" stylesheets="@../cssFiles/addbook.css" text="Cancel">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </JFXButton>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>

</AnchorPane>
