<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="body" prefHeight="246.0" prefWidth="334.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.settings.Setting">

    <children>
        <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <JFXTextField fx:id="noOfDays" labelFloat="true" promptText="No. of days a member can keep a book withou fine">
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
                <JFXTextField fx:id="finePerDay" labelFloat="true" layoutX="30.0" layoutY="30.0" promptText="Fine per Day">
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
                <JFXTextField fx:id="username" labelFloat="true" layoutX="10.0" layoutY="76.0" promptText="username">
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
            <JFXPasswordField fx:id="password" labelFloat="true" promptText="password">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </JFXPasswordField>
                <HBox prefHeight="47.0" prefWidth="366.0">
                    <children>
                        <JFXButton fx:id="saveBtn" onAction="#save" prefHeight="38.0" prefWidth="143.0" stylesheets="@../cssFiles/addbook.css" text="Save">
                            <HBox.margin>
                                <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="cancelBtn" layoutX="30.0" layoutY="20.0" onAction="#cancel" prefHeight="38.0" prefWidth="143.0" stylesheets="@../cssFiles/addbook.css" text="Cancel">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
                            </HBox.margin>
                        </JFXButton>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>

</AnchorPane>
